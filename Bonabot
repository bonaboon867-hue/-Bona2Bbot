from telegram import Update
from telegram.ext import ApplicationBuilder, MessageHandler, CommandHandler, ContextTypes, filters

TOKEN = "TOKEN_KEE_ASI"

# /start command
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "Akkam jirtu ğŸ‘‹\nAni Telegram Bot public deebii ofumaan kennu dha ğŸ¤–"
    )

# Ergaa kamiyyuu deebisu
async def auto_reply(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = update.message.text.lower()

    if "akkam" in text:
        reply = "Nagaan jira ğŸ˜Š ati hoo?"
    elif "maqaa kee" in text:
        reply = "Ani Public Reply Bot dha ğŸ¤–"
    elif "galatoomi" in text:
        reply = "Baga nagaan! ğŸ˜Š"
    else:
        reply = "Ergaa kee argadhe ğŸ‘"

    await update.message.reply_text(reply)

# App
app = ApplicationBuilder().token(TOKEN).build()

app.add_handler(CommandHandler("start", start))
app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, auto_reply))

print("Bot hojjechaa jira...")
app.run_polling()
